<?xml version="1.0" encoding="utf-8" ?>
<mainWindow width="800" height="600">
    <gridLayout id="mainLayout" rows="1" columns="3" columnSizes="200px;*;250px">
        <gridLayout id="controlLayout" rows="7" columns="1" rowSizes="50px;30px;30px;30px;200px;50px;*">
            <gridLayout id="fileInput" rows="1" columns="2" columnSizes="50px;*">
                <label text="File:" />
                <editBox id="file" autoWidth="MatchParent" text="test.xml" />
            </gridLayout>

            <button id="load" text="Load" autoWidth="MatchParent" autoHeight="MatchParent" />
            <button id="save" text="Save" autoWidth="MatchParent" autoHeight="MatchParent" enabled="false" />
            <button id="refresh" text="Refresh" autoWidth="MatchParent" autoHeight="MatchParent" enabled="false" />

            <listBox autoWidth="MatchParent" autoHeight="MatchParent" id="components" />

            <gridLayout id="addremove" rows="1" columns="2">
                <button id="add" text="Add" autoWidth="MatchParent" autoHeight="MatchParent" enabled="false" />
                <button id="remove" text="Remove" autoWidth="MatchParent" autoHeight="MatchParent" enabled="false" />
            </gridLayout>

            <treeBox id="astTreeBox" autoWidth="MatchParent" autoHeight="MatchParent" />
        </gridLayout>

        <scrollView id="preview" autoWidth="MatchParent" autoHeight="MatchParent" />

        <scrollView id="propertiesScrollView" autoWidth="MatchParent" autoHeight="MatchParent">
            <listBox id="propertyList" autoWidth="MatchParent" autoHeight="MatchParent" />
        </scrollView>
    </gridLayout>
</mainWindow>
